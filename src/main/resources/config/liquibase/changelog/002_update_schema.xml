<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="00000000000002" author="luca">
    	<preConditions>
			<not>
				<columnExists tableName="book" columnName="cover_name" />
			</not>
		</preConditions>
	    <addColumn tableName="book">
	        <column name="cover_name" type="varchar(255)"/>
	    </addColumn>
	</changeSet>
	
	<changeSet id="00000000000003" author="luca">
		<preConditions>
			<not>
				<columnExists tableName="book" columnName="cover_location" />
			</not>
		</preConditions>
		<addColumn tableName="book">
			<column name="cover_location" type="varchar(50)" />
		</addColumn>
	</changeSet>
	
	<changeSet id="00000000000004" author="luca">
		<preConditions>
			<columnExists tableName="book" columnName="year" />
		</preConditions>
		<dropColumn columnName="year" tableName="book"/>
	</changeSet>
	
	<changeSet id="00000000000005" author="luca">
		<preConditions>
			<not>
				<columnExists tableName="book" columnName="release_date" />
			</not>
		</preConditions>
		<addColumn tableName="book">
	        <column name="release_date" type="date"/>
	    </addColumn>
	</changeSet>
	
	<changeSet id="00000000000006" author="luca">
		<loadUpdateData encoding="UTF-8"
                  file="config/liquibase/csv/002/book.csv"
                  separator=";"
                  primaryKey="id"
                  tableName="book"/>
	</changeSet>
	
	
</databaseChangeLog>